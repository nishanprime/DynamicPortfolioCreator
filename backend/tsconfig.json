{
    "compilerOptions": {
      "lib": ["es5", "es6"],
      "types": ["node"],
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "rootDir": ".",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "skipLibCheck": true
    },
    "include": ["./**/*.ts", "./**/types/*.d.ts", "*.crt"]
  }
  